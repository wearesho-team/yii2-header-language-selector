{
  "name": "wearesho-team/yii2-header-language-selector",
  "description": "Library for configuring auto setting language from headers in yii2 application",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Beton",
      "email": "aleksa.yagich@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Wearesho\\Yii\\HeaderLanguageSelector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Yii\\HeaderLanguageSelector\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit"
  },
  "require": {
    "php": ">=7.2",
    "yiisoft/yii2": "^2.0.15.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3"
  }
}
